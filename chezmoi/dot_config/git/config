# vim: filetype=gitconfig
# vim: set noexpandtab:

[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	syntax-theme = gruvbox-dark
	side-by-side = true
[diff]
	colorMoved = default
[alias]
	st = status -sb
	co = checkout
	sub = submodule update
[color]
	ui = true
[commit]
	verbose = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[push]
	default = simple
[pager]
	branch = false
[pull]
	rebase = false
[includeIf "gitdir/i:~/code-work/"]
	path = ~/code-work/.gitconfig
[includeIf "gitdir/i:~/code-perso/"]
	path = ~/code-perso/.gitconfig
