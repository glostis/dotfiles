// vim: ft=c

// This custom symbols file is used to override some
// keymaps from the us(altgr-intl) layout
//
// It adds the following mappings:
// altgr + key -> letter
// ; -> : and ; -> : (because : is used more often)
//
// The current key -> symbols table in use can be seen by inspecting the
// contents of `xkbcomp $DISPLAY xkb.dump`.
//
// See ~/.bin/custom_keyboard_layout for more information on how this custom
// glostis symbols file is applied.

partial alphanumeric_keys
xkb_symbols "hacks" {
    key <AD01> {
        symbols[Group1]= [ q, Q, agrave, Agrave ]
    };
    key <AD02> {
        symbols[Group1]= [ w, W, egrave, Egrave ]
    };
    key <AD03> {
        symbols[Group1]= [ e, E, idiaeresis, Idiaeresis ]
    };
    key <AD04> {
        symbols[Group1]= [ r, R, oe, OE ]
    };
    key <AD05> {
        symbols[Group1]= [ t, T, ugrave, Ugrave ]
    };
    key <AC01> {
        symbols[Group1]= [ a, A, acircumflex, Acircumflex ]
    };
    key <AC02> {
        symbols[Group1]= [ s, S, ecircumflex, Ecircumflex ]
    };
    key <AC03> {
        symbols[Group1]= [ d, D, icircumflex, Icircumflex ]
    };
    key <AC04> {
        symbols[Group1]= [ f, F, ocircumflex, Ocircumflex ]
    };
    key <AC05> {
        symbols[Group1]= [ g, G, ucircumflex, Ucircumflex ]
    };
    key <AB01> {
        symbols[Group1]= [ z, Z, ediaeresis, Ediaeresis ]
    };
    key <AB02> {
        symbols[Group1]= [ x, X, eacute, Eacute ]
    };
    key <AB03> {
        symbols[Group1]= [ c, C, ccedilla, Ccedilla ]
    };
    key <AB09> {
        symbols[Group1]= [ period, greater, rightarrow, leftarrow ]
    };
    key <AC10> {
        symbols[Group1]= [ colon, semicolon, degree, degree ]
    };
    key <AE11> {
        symbols[Group1]= [ minus, underscore, emdash, emdash]
    };
};

partial alphanumeric_keys
xkb_symbols "kinesis" {
    key <LFSH> {
        symbols[Group1]= [ parenleft, bracketleft, braceleft ]
    };
    key <RTSH> {
        symbols[Group1]= [ parenright, bracketright, braceright ]
    };
    key <DELE> {
        symbols[Group1]= [ Shift_L ]
    };
};
