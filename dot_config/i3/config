# i3 config file (v4)
# See https://i3wm.org/docs/userguide.html for a complete reference!

# Set "super" as i3 modifier key
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

font pango:MesloLGM Nerd Font Mono 11

# Disable window title bar
default_border pixel 1
default_floating_border none

gaps inner 10
gaps top 27

# Only show a border when more than one window is visible
smart_borders on

# Workspaces:
# 1: qutebrowser, 2: terminal1, 3: terminal2, 4: qgis,
# 5: unassigned, 6: unassigned, 7: chrome, 8: music, 9: slack

# Assign windows to specific workspaces
assign [class="qutebrowser"] 1
assign [class="Google-chrome"] 7
for_window [class="Spotify"] move to workspace 8
assign [class="Slack"] 9
assign [class="QGIS3"] 4
for_window [class="QGIS3"] border pixel 2

for_window [class="vpv"] floating enable
# for_window [class="vpv"] fullscreen enable
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_*"] border pixel 0

exec_always --no-startup-id feh --no-fehbg --randomize --bg-fill $HOME/Pictures/Wallpapers/*

exec_always --no-startup-id $HOME/.config/polybar/launch.sh

set $red       #cc241d
set $orange    #d65d0e
set $blue      #458588
set $bckgd     #282828
set $bckgd_alt #3c3836
set $white     #ebdbb2

# class                 border     backgr     text      indicator child_border
client.focused          $bckgd_alt $bckgd_alt $white    $blue     $white
client.focused_inactive $bckgd     $bckgd     $white    $blue     $white
client.unfocused        $bckgd     $bckgd     $white    $blue     $bckgd
client.urgent           $red       $red       $white    $red      $red
