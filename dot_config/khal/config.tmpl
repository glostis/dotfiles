[calendars]
  [[perso]]
    path = ~/.calendars/perso/{{ .email }}/
    color = light green
    readonly = true

[default]
  highlight_event_days = true

[locale]
  timeformat = %H:%M
  dateformat = %Y-%m-%d
  longdateformat = %Y-%m-%d
  datetimeformat = %Y-%m-%d %H:%M
  longdatetimeformat = %Y-%m-%d %H:%M

[view]
  agenda_event_format = {calendar-color}{cancelled}{start-end-time-style} | {title}{nl}{location}{reset}
  frame = width

