# i3wm stuff

# i3 focus windows
super + {h,j,k,l}
    i3-msg -q focus {left,down,up,right}

# i3 move windows
super + {Left,Down,Up,Right}
    i3-msg -q move {left,down,up,right}

# i3 resize
super + alt + {h,j,k,l}
    i3-msg -q resize {shrink,grow,shrink,grow} {width,height,width,height} 10 px

# emoji picker
super + shift + j
    rofimoji

# Paste markdown link
super + shift + l
    paste_markdown_link

# i3 move workspace to other output/screen/monitor
super + x
    i3-msg -q move workspace to output next && i3-msg -q focus output next

# i3 toggle {fullscreen,floating}
super + {_,shift +} f
    i3-msg -q {fullscreen,floating} toggle

# i3 toggle focus between tiling and floating containers (grave = `)
super + grave
    i3-msg -q focus mode_toggle

# i3 {focus,move container to} workspace
super + {_,shift +} {1-9}
    i3-msg -q {workspace,move container to workspace} {1-9}

# i3 restart
super + shift + r
    i3-msg -q restart

super + {_,shift +} c
    rofi-screenshot {_,-s}

# i3 toggle layout stacking split v/h
super + e
    i3-msg -q layout toggle stacking splitv splith

# i3 kill (quit/close window)
super + q
    i3-msg -q kill

# Application launches

# Launch alacritty
super + space
    alacritty -e tmux new-session -A -s session

# rofi launcher
super + d
    rofi -modi drun -show drun -show-icons

# Launch {Firefox,Google Chrome,QGIS,Slack,Bitwarden,1password}
super + o ; {f,c,g,s,b,p}
    launch_application {launch_firefox,google-chrome-stable,qgis,slack,bitwarden-desktop,1password,}

# Launch Google Drive
super + o ; d
    /opt/google/chrome/google-chrome --profile-directory=Default --app-id=aghbiahbpaijignceidepookljebhfak

# 1password quick access
super + p
    1password --quick-access

# Screenshot
super + y
    screenshot

# Farewell {rofi,suspend,lock,hibernate,shutdown,reboot}
super + z; {z,x,l,h,s,r}
    farewell {_,Suspend,Lock,Hibernate,Shutdown,Reboot}

# Change monitor layout
super + m
    monitor-layout

# Sound control

XF86Audio{Raise,Lower}Volume
    volumectl {increase,decrease}

XF86AudioMute
    pamixer --toggle-mute

XF86AudioPlay
    playerctl play-pause && dunstify --appname="volume" "Play/pause"

XF86Audio{Next,Prev}
    playerctl {next,prev}

# Screen brightness controls
# Uses https://github.com/haikarainen/light
# Need to add the user to the `video` group
XF86MonBrightness{Up,Down}
    light -{A,U} 10

# Toggle on/off {wifi,VPN,bluetooth}
super + {n,v,b}
    networking-toggle {wifi,vpn,bluetooth}

# Rofi {network manager,bluetooth}
super + shift + {n,b}
    {networkmanager_dmenu,rofi-bluetooth}

# Notifications (dunst) {close,pause toggle}
super + {_,shift +} Return
    {dunstctl close-all,dunst-pause}

super + t
    python /home/glostis/.config/colorschemes/switcher.py

# sxhkd rofi helper menu
super + shift + s
    sxhkhmenu

super + s
    i3-msg -q split toggle

# greenclip (clipboard manager)
super + g
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
