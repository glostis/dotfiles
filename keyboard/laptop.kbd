(defalias
    nav (tap-hold-next-release 200 esc (layer-toggle navigation))
    qwe (tap-macro (cmd-button "polybar-msg action kmonad send")       (layer-switch qwerty))
    nal (tap-macro (cmd-button "polybar-msg action kmonad send ' ó°†‹ '") (layer-switch navigationlock))
    sal (around lsft lalt)
    sct (around lsft lctl)
    tmx (around lctl spc)
    stc (sticky-key 1000 lctl)
    sra (sticky-key 1000 ralt)
    cz  (around lctl z)
    cx  (around lctl x)
    cc  (around lctl c)
    cv  (around lctl v)
)

(deflayer qwerty
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    XX   XX
  @nav a    s    d    f    g    h    j    k    l    ;    '    \    ret
  lsft 102d z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lmet lalt           spc            @sra prnt rctl
)

(deflayer navigation
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    @sal @sct _    home pgdn pgup end  _    _    _
  _    _    @tmx lalt @stc _    left down up   rght bspc @nal _    _
  _    _    @cz  @cx  @cc  @cv  _    _    _    _    _    _    _
  _    _    _              _              _    _    _
)

(deflayer navigationlock
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    @sal @sct _    home pgdn pgup end  _    _    _
  @qwe _    _    lalt lctl _    left down up   rght bspc _    _    _
  _    _    @cz  @cx  @cc  @cv  _    _    _    _    _    _    _
  _    _    _              _              _    _    _
)
